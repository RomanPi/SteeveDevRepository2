<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/transparent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rimo"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/userTextView"
        android:layout_alignBottom="@+id/debtAmountTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pando"
        android:textColor="#fff"
        android:textSize="20sp"
        android:id="@+id/receiverTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff00"
        android:textSize="20sp"
        android:id="@+id/debtAmountTextView"
        android:layout_alignTop="@+id/receiverTextView"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userTextView"
        android:id="@+id/colorLayout1">
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="â‚¬"
        android:textSize="20sp"
        android:id="@+id/euroTV"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/debtAmountTextView"
        android:layout_toEndOf="@+id/debtAmountTextView" />
</RelativeLayout>